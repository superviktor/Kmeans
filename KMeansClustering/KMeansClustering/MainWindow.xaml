<Window x:Class="KMeansClustering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Label>Number of Cluster</Label>
                <TextBox Name="nuOfClusters" Width="20"></TextBox>
                <Button Width="76"  Click="DisplayDefaultData_Click">Display</Button>
                <Button Width="76" Click="Clustering_Click">Cluster</Button>
                <Button Click="Clear_Click">Clear</Button>
            </StackPanel>   
            <Label DockPanel.Dock="Bottom"></Label>
            <Canvas Name="defaultcanvas" DockPanel.Dock="Left" Width="500" Background="Azure"></Canvas>
            <Label Background="Black" Width="1"></Label>
            <Canvas Name="resultcanvas" DockPanel.Dock="Right" Background="White"></Canvas>
        </DockPanel>
        
    </Grid>
</Window>
